{
    "name": "liquidweb/woocommerce-custom-orders-table",
    "description": "Store WooCommerce order data in a custom table for improved performance",
    "license": "GPL-3.0-or-later",
    "type": "wordpress-plugin",
    "readme": "README.md",
    "authors": [
        {
            "name": "Liquid Web",
            "homepage": "https://www.liquidweb.com"
        },
        {
            "name": "Mindsize",
            "homepage": "https://mindsize.me"
        }
    ],
    "support": {
        "issues": "https://github.com/liquidweb/woocommerce-custom-orders-table/issues",
        "source": "https://github.com/liquidweb/woocommerce-custom-orders-table"
    },
    "require": {
        "composer/installers": "^1.6.0",
        "php": ">=5.6|>=7.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5",
        "php": "^7.0",
        "phpcompatibility/php-compatibility": "^9.0",
        "phpunit/phpunit": "^7.5",
        "woocommerce/woocommerce": "dev-master",
        "woocommerce/woocommerce-blocks": "*",
        "woocommerce/woocommerce-rest-api": "*",
        "woocommerce/woocommerce-sniffs": "^0.0.7",
        "wp-cli/wp-cli": "^2.0",
        "wp-coding-standards/wpcs": "^2.1"
    },
    "autoload-dev": {
        "classmap": [
            "tests/test-tools",
            "vendor/woocommerce/woocommerce/tests/framework"
        ],
        "files": [
            "tests/test-tools/utils.php"
        ]
    },
     "scripts": {
        "post-install-cmd": [
            "@build-woocommerce"
        ],
        "post-update-cmd": [
            "@build-woocommerce"
        ],
        "build-woocommerce": [
            "@composer install --no-dev -d ./vendor/woocommerce/woocommerce"
        ],
        "test-coverage": [
            "phpunit --testsuite=plugin --coverage-html=tests/coverage"
        ]
    },
    "scripts-descriptions": {
        "build-woocommerce": "Install WooCommerce's dependencies and prepare its custom autoloader",
        "test-coverage": "Generate test coverage for the plugin"
    },
    "prefer-stable": true,
    "config": {
        "platform": {
            "php": "7.2"
        },
        "preferred-install": {
            "woocommerce/woocommerce": "source",
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "installer-paths": {
            "vendor/{$vendor}/{$name}": [
                "woocommerce/woocommerce"
            ],
            "vendor/woocommerce/woocommerce/packages/{$name}": [
                "woocommerce/woocommerce-blocks",
                "woocommerce/woocommerce-rest-api"
            ]
        }
    }
}
